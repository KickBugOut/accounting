page {
  --normal-color: #8c8c8c;
  --normal-background: #f5f5f5;
  --expend-color: #40a9ff;
  --expend-background: #bae7ff;
  --income-color: #73d13d;
  --income-background: #d9f7be;
  --other-color: #9254de;
  --other-background: #efdbff;
  box-sizing: border-box;
  padding: 0 50rpx 20rpx;
}

.row-between-center {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.row-evenly-center {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}
.row-null-center {
  display: flex;
  align-items: center;
}

.column-null-center {
  display: flex;
  flex-direction: column;
  align-items: center;
}
