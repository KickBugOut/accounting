.container {
  width: 100%;
  min-height: 600rpx;
  max-height: 1200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.main,
.sub {
  width: 100%;
  height: 600rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.container .chart {
  width: 100%;
  height: 600rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.chart canvas {
  width: 100%;
  height: 100%;
}