.container {
  width: 80%;
  height: 200rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  margin-left: 50%;
  transform: translateX(-50%);
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  border-radius: 10rpx;
}

.item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.ball {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  border-radius: 50%;
}

.value {
  margin-top: 10rpx;
  font-size: 30rpx;
}